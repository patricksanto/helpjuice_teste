<%= form_with url: "#", method: :get, data: { controller: "search" }, class: 'flex gap-2' do %>
  <%= text_field_tag :query, nil, 
                     placeholder: "searching...",
                     class: "rounded-full border border-transparent",
                     data: { action: "input->search#debouncedSearch", target: "search.input" }
  %>
  <%= submit_tag "Search!", class: "rounded-full bg-slate-500 text-white font-bold px-4 py-2 mouse-pointer hover:bg-slate-600 transition" %>
<% end %>
