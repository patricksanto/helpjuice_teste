<%= search_form_for(@query, url: search_path, method: :get, class:'flex gap-2')  do |f| %>
    <%= f.search_field :title_or_content_cont, placeholder: "searching...", class: "rounded-full border border-transparent" %>
    <%= f.submit "Search!", class:"rounded-full bg-slate-500 text-white font-bold px-4 py-2 mouse-pointer hover:bg-slate-600 transition" %>
<% end %>
 